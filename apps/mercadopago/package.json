{
  "name": "mercadopago",
  "version": "1.0.0",
  "description": "Server for mercadopago payments",
  "scripts": {
    "test": "jest",
    "dev": "nodemon --inspect src/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "node ./dist/index.js",
    "build": "tsc --project build.tsconfig.json",
    "e2e": "NODE_ENV=e2e jest --config ./jest-e2e.config.json --verbose --runInBand --forceExit",
    "e2e:ci": "NODE_ENV=ci jest --config ./jest-e2e.config.json --verbose --runInBand --forceExit",
    "e2e:coverage": "jest --config ./jest-e2e.config.json --verbose --runInBand --coverage"
  },
  "keywords": [
    "mercadopago",
    "typescript",
    "express",
    "node"
  ],
  "author": "Diego Vergara <davc93@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.4.0",
    "@types/mercadopago": "^1.5.8",
    "@types/node": "^18.11.9",
    "@types/nodemailer": "^6.4.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jest": "^29.4.3",
    "mercadopago": "^1.5.14",
    "mongoose": "^6.8.3",
    "nodemailer": "^6.8.0"
  }
}
